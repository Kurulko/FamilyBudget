@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "Roles";
}


<a href="@($"add")"
   class="btn btn-outline-info">
    <em>Add</em>
</a>

@if (Model.Any())
{
    <br />
    <br />
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (IdentityRole role in Model)
                    {
                        <tr>
                            <td>@role.Name</td>
                            <td>
                                <a href="@($"models/{role.Id}")"
                                   class="btn btn-outline-primary">
                                    <em>Details</em>
                                </a>
                                <a href="@($"models/{role.Id}/edit")"
                                   class="btn btn-outline-warning">
                                    <em>Edit</em>
                                </a>
                                <a href="@($"models/{role.Id}/delete")"
                                   class="btn btn-outline-danger">
                                    <em>Delete</em>
                                </a>
                            </td>
                        </tr>
                   }
                </tbody>
            </table>
        </div>
    </div>
}
