@model LoginModel
@{
    string title = AcсountModes.Login;
    ViewBag.Title = title;
}
@section Link{
    <a href="/@AcсountModes.Register.ToStringAndLower()" class="btn btn-outline-primary">@AcсountModes.Register</a>
}

<form method="post" class="form-group">
    <div asp-validation-summary="ModelOnly" class="text-danger" style="font-style: oblique;"></div>

    <label asp-for="Name"></label>
    <span asp-validation-for="Name" class="text-danger" ></span>
    <input asp-for="Name" style="width: 50%;" />
    <br />
    <label asp-for="Password"></label>
    <span asp-validation-for="Password" class="text-danger"></span>
    <input asp-for="Password" style="width: 50%;" />
    <br />
    <label asp-for="IsRememberMe"></label>
    <span asp-validation-for="IsRememberMe" class="text-danger"></span>
    <input asp-for="IsRememberMe"/>
    <br />
    <input type="hidden" name="returnUrl" value=@ViewBag.ReturnUrl />
    <button class="btn btn-outline-primary">@title</button>
</form>

