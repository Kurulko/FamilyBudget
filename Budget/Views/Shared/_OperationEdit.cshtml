@model ModelWithMode<Operation>

@{
    Mode mode = Model.Mode;
    Operation? operation = Model.Model;
    bool isEdit = mode == Mode.Edit || mode == Mode.Add;
}

<model-details for="Model.Name">
    @if (isEdit)
    {
        <input asp-for="Model.Name" class="form-control" />
        <p><span asp-validation-for="Model.Name" class="text-danger"></span></p>
    }
</model-details>

<hr />
@if (operation.Description is not null)
{
    <model-details for="Model.Description">
        @if (isEdit)
        {
            <input asp-for="Model.Description" class="form-control" />
            <p><span asp-validation-for="Model.Description" class="text-danger"></span></p>
        }
    </model-details>
    <hr />
}
<model-details for="Model.DateTime">
    @if (isEdit)
    {
        <input asp-for="Model.DateTime" class="form-control" />
        <p><span asp-validation-for="Model.DateTime" class="text-danger"></span></p>
    }
</model-details>

@if (mode != Mode.Get)
{
    <input type="hidden" asp-for="Model.Id" />
    <input type="hidden" asp-for="Model.CategoryId" />
    <input type="hidden" asp-for="Model.UserId" />
}




