<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        a:hover {
            text-decoration-line: none;
        }

        .my_input {
            width: 50%;
            text-align: center;
        }

        label {
            font-weight: bold;
        }

        span, label, th, td, input, option, select, h4, h3 {
            font-style: oblique;
        }

        body {
            margin: 0;
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #4f2684;
            color: white;
            width: 100%;
        }

            header h4 {
                margin: 0 auto;
            }

        .menu {
            top: 0;
            left: 0;
            height: 93.5%;
            background-color: #3a0647;
            color: white;
        }

        .menu ul {
            list-style: none;
            padding: 0;
        }

        .menu li a {
            margin-top: 30%;
        }

        .menu-toggle {
            font-size: 24px;
            background-color: transparent;
            border: none;
            color: white;
            margin-left: 5px;
            padding: 0;
            cursor: pointer;
        }

    </style>
</head>
<body>
    <header>
        <button class="menu-toggle">&#9776;</button>
        <h4>Personal Budget</h4>
    </header>

    <div class="row">
        <div class="col-md-2" id="left" hidden>
            <div class="menu">
                <div class="row">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">
                        <ul>
                            <li>
                                <a href="@($"/operations/{TypeOfOperation.Purchase.ToString().ToLower()}/models")"
                                   class="btn btn-outline-primary">
                                    <em>Purchases</em>
                                </a>
                            </li>
                            <li>
                                <a href="@($"/operations/{TypeOfOperation.Receiving.ToString().ToLower()}/models")"
                                   class="btn btn-outline-primary">
                                    <em>Receiving</em>
                                </a>
                            </li>
                            <li>
                                <a asp-controller="operations" asp-action="models"
                                   class="btn btn-outline-primary">
                                    <em>Compare</em>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12" id="right">
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    <br />
                    @RenderSection("BelowHeader", required: false)
                    <center>
                        <br /><br />
                        @RenderBody()
                        <br /><br />
                    </center>
                </div>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container" style="font-style: oblique;">
            &copy; 2023 - Personal Budget
            @if (User.Identity!.IsAuthenticated)
            {
                <a asp-action="Logout" asp-controller="Account">@AcсountModes.Logout</a>
            }
            @RenderSection("Link", required: false)
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        const menuToggle = document.querySelector(".menu-toggle");
        var open = false;

        menuToggle.addEventListener("click", () => {
            const menu = document.querySelector(".menu");
            const left = document.getElementById("left");
            const right = document.getElementById("right");

            open = !open;

            if (open) {
                right.classList.remove("col-md-12");
                left.removeAttribute("hidden");
                left.classList.add("col-md-2");
                right.classList.add("col-md-10");

                menu.classList.add("open");
            }
            else {
                left.classList.remove("col-md-2");
                right.classList.remove("col-md-10");
                left.setAttribute("hidden", "hidden");
                right.classList.add("col-md-12");

                menu.classList.remove("open");
            }
        });

    </script>
</body>
</html>
